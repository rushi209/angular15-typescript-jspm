{
  "name": "angular15-typescript-jspm",
  "version": "1.0.0",
  "description": "Demo of using Angular ^1.5.8, Typescript ^2.0.0 and JSPM",
  "repository": {
      "url": "https://github.com/sgwatgit/angular15-typescript-jspm.git",
      "type": "git"
  },
  "readme": "README.md",
  "main": "main.ts",
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" --kill-others",
    "postinstall": "jspm install && typings install",
    "lite": "lite-server",
    "jspm": "jspm",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "bundle:prod": "jspm bundle app --minify --inject",
    "bundle": "jspm bundle app --inject",
    "unbundle": "jspm unbundle"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "jspm": "^0.16.46",
    "lite-server": "^2.2.2",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  },
  "author": "Sean G. Wright <sean@seangwright.me> (http://seangwright.me/)",
  "license": "MIT",
  "jspm": {
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.5.8",
      "lodash": "npm:lodash@^4.15.0",
      "text": "github:systemjs/plugin-text@^0.0.9",
      "ts": "github:frankwallis/plugin-typescript@^5.1.2"
    },
    "devDependencies": {
      "typescript": "npm:typescript@^2.0.3"
    }
  }
}
